{
  "name": "apollo-fullstack-starter-kit",
  "private": true,
  "version": "1.0.0",
  "main": "src/backend",
  "engines": {
    "node": "6.2.2",
    "npm": "3.7.3"
  },
  "scripts": {
    "start-frontend": "babel-node ./webpack/dev_server.js",
    "start-backend": "nodemon -e js,jsx,md,mustache -w ./src --exec babel-node -- ./src/backend/index.js",
    "dev-start": "concurrently \"npm run start-frontend\" \"npm run start-backend\"",
    "prod-start": "node ./build/backend",
    "start": "if [ \"$NODE_ENV\" != production ]; then npm run dev-start; else npm run prod-start; fi",
    "test": "mocha --compilers js:babel-core/register --reporter spec --full-trace 'src/**/*.test.js' && npm run lint",
    "lint": "eslint --fix --ext js --ext jsx src",
    "seed": "knex seed:run",
    "migrate": "knex migrate:latest",
    "postinstall": "if [ \"$NODE_ENV\" = production ]; then rm -rf ./build && npm run prod-build && npm run migrate && npm run seed; fi",
    "prod-build": "concurrently \"npm run prod-build-frontend\" \"npm run prod-build-backend\"",
    "prod-build-frontend": "webpack --config ./webpack/frontend.js",
    "prod-build-backend": "babel ./src -d './build' --source-maps"
 },
  "repository": {
    "type": "git",
    "url": "git@github.com:sysgears/apollo-fullstack-starter-kit.git"
  },
  "bugs": {
    "url": "https://github.com/sysgears/apollo-fullstack-starter-kit/issues"
  },
  "homepage": "https://github.com/sysgears/apollo-fullstack-starter-kit",
  "keywords": [
    "apollo",
    "fullstack",
    "starter",
    "graphql",
    "react"
  ],
  "author": "SysGears INC",
  "license": "MIT",
  "dependencies": {
    "aphrodite": "^0.5.0",
    "apollo-client": "^0.4.14",
    "apollo-server": "^0.2.8",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "graphql": "^0.7.0",
    "graphql-tag": "^0.1.13",
    "graphql-tools": "^0.6.6",
    "graphql-typings": "0.0.1-beta-2",
    "isomorphic-fetch": "^2.2.1",
    "knex": "^0.11.10",
    "minilog": "^3.0.1",
    "node-sass": "^3.9.3",
    "react": "^15.3.1",
    "react-addons-update": "^15.3.1",
    "react-apollo": "^0.5.4",
    "react-bootstrap": "^0.30.3",
    "react-dom": "^15.3.1",
    "react-router": "^2.8.0",
    "react-router-redux": "^4.0.5",
    "sqlite3": "^3.1.4",
    "thinky": "^2.3.6",
    "webpack": "^1.13.2",
    "webpack-manifest-plugin": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-inline-import": "^2.0.3",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "bootstrap-loader": "^1.1.6",
    "bootstrap-sass": "^3.3.7",
    "chai": "^3.5.0",
    "concurrently": "^2.2.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.0.0",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "graphql": "^0.7.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.2",
    "react-redux": "^4.4.5",
    "resolve-url-loader": "^1.6.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack-dev-server": "^1.15.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./webpack/frontend.js"
        }
      }
    },
    "env": {
      "mocha": true
    },
    "globals": {
      "window": true,
      "document": true
    },
    "plugins": [
      "react"
    ]
  }
}
